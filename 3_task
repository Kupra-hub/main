#include <iostream>
#include <string>
#include <cctype> 
using namespace std;

int main() {
    setlocale(LC_ALL, "Rus");
    string text;
    cout << "Введите текст: ";
    getline(cin, text);

    char choice;
    cout << "Учитывать регистр? (Yes/No): ";
    cin >> choice;

    const int SIZE = 256; 
    int count[SIZE] = { 0 }; 

    for (char& ch : text) {
        if (isalnum(ch)) {
            if (choice == 'no' || choice == 'NO') {
                ch = tolower(ch);
            }
            count[ch]++;
        }
    }

    cout << "Результат: " << endl;
    for (int i = 0; i < SIZE; i++) {
        if (isalnum(i) && count[i] > 0) {
            cout << char(i) << " - " << count[i] << endl;
        }
    }

    return 0;
}
